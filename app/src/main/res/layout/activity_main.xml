        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tripteller_white"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="12dp"
