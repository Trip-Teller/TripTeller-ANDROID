<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_myChatTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:text="시간"
        app:layout_constraintBottom_toBottomOf="@+id/txt_myChat"
        app:layout_constraintEnd_toStartOf="@+id/txt_myChat" />

    <TextView
        android:id="@+id/txt_myChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="236dp"
        android:layout_margin="10dp"
        android:background="@drawable/chat_black"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="end"
        android:includeFontPadding="false"
        android:padding="8dp"
        android:text="내가 입력한 내용"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
