<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_splash_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/act_splash_kenBurnsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/picture_1"
        android:foreground="#4c000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/act_splash_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:src="@drawable/img_designyourtrip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/act_splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tripteller_logo"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/act_splash_img"
        app:layout_constraintStart_toStartOf="@+id/act_splash_img"
        app:layout_constraintTop_toBottomOf="@+id/act_splash_img" />

    <TextView
        android:id="@+id/act_splash_btn_signin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/black_roundbox_24"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:includeFontPadding="false"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:text="로그인"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/act_splash_btn_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/act_splash_kenBurnsView" />


    <TextView
        android:id="@+id/act_splash_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:background="@drawable/white_roundbox_24"
        app:layout_constraintBottom_toTopOf="@+id/act_splash_btn_justlook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:textStyle="normal"
        android:textSize="15sp"
        android:textColor="@color/tripteller_deepblue"
        android:text="회원가입"/>

    <TextView
        android:id="@+id/act_splash_btn_justlook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="트립텔러 둘러보기"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <include
        android:id="@+id/layout_signin"
        layout="@layout/layout_signin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/act_splash_kenBurnsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>