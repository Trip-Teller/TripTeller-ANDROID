<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign.SignupActivity">


    <TextView
        android:id="@+id/act_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/noto_sans_kr_light"
        android:includeFontPadding="false"
        android:text="트립텔러가\n준비를 해볼까요?"
        android:textAlignment="center"
        android:textColor="@color/tripteller_black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/act_signup_edit_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/skyblue_roundstroke_3"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:hint="아이디를 입력해주세요"
        android:includeFontPadding="false"
        android:paddingHorizontal="12dp"
        android:singleLine="true"
        android:textColor="@color/tripteller_black"
        android:textCursorDrawable="@null"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_title" />

    <ImageView
        android:id="@+id/act_signup_edit_check_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_checkbox_pressed"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/act_signup_edit_id"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_edit_id"
        app:layout_constraintTop_toTopOf="@+id/act_signup_edit_id" />


    <EditText
        android:id="@+id/act_signup_edit_pwd1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:background="@drawable/skyblue_roundstroke_3"
        android:hint="비밀번호를 입력해주세요"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/tripteller_black"
        android:includeFontPadding="false"
        android:paddingHorizontal="12dp"
        android:singleLine="true"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_id" />

    <ImageView
        android:id="@+id/act_signup_edit_check_pwd1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_checkbox_pressed"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/act_signup_edit_pwd1"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_edit_pwd1"
        app:layout_constraintTop_toTopOf="@+id/act_signup_edit_pwd1" />

    <TextView
        android:id="@+id/act_signup_text_pwdLengh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="비밀번호는 최소 5자 이상이어야 해요"
        android:textColor="@color/tripteller_raspberry"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/act_signup_edit_pwd1"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_pwd1" />


    <EditText
        android:id="@+id/act_signup_edit_pwd2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/skyblue_roundstroke_3"
        android:hint="비밀번호를 한번 더 입력해주세요"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/tripteller_black"
        android:inputType="textPassword"
        android:singleLine="true"
        android:paddingHorizontal="12dp"
        android:textCursorDrawable="@null"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_text_pwdLengh" />

    <ImageView
        android:id="@+id/act_signup_edit_check_pwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_checkbox_pressed"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/act_signup_edit_pwd2"
        app:layout_constraintEnd_toEndOf="@+id/act_signup_edit_pwd2"
        app:layout_constraintTop_toTopOf="@+id/act_signup_edit_pwd2" />

    <TextView
        android:id="@+id/act_signup_text_recheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="아이디, 비밀번호를 확인해주세요!"
        android:textColor="@color/tripteller_raspberry"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/act_signup_edit_pwd2"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_pwd2" />


    <Button
        android:id="@+id/act_signup_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="86dp"
        android:background="@drawable/selector_nextbtn"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:paddingVertical="12dp"
        android:text="다음으로"
        android:enabled="false"
        android:textColor="@color/tripteller_white"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_marginHorizontal="48dp"
        app:layout_constraintEnd_toEndOf="@id/act_signup_edit_pwd2"
        app:layout_constraintStart_toStartOf="@id/act_signup_edit_pwd2"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_pwd2" />
</androidx.constraintlayout.widget.ConstraintLayout>