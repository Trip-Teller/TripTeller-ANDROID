<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sign.SignupActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/act_signup_edit_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/iceblue_roundbox_24"
        android:hint="아이디를 입력해주세요"
        android:includeFontPadding="false"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:layout_editor_absoluteX="0dp" />


    <EditText
        android:id="@+id/act_signup_edit_pwd1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:inputType="textPassword"
        android:background="@drawable/iceblue_roundbox_24"
        android:hint="비밀번호를 입력해주세요"
        android:includeFontPadding="false"
        android:paddingHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_id" />

    <TextView
        android:id="@+id/act_signup_text_pwdLengh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="비밀번호는 최소 5자 이상이어야 해요"
        android:textColor="@color/tripteller_raspberry_2"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="gone"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="@+id/act_signup_edit_pwd1"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_pwd1" />


    <EditText
        android:id="@+id/act_signup_edit_pwd2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/iceblue_roundbox_24"
        android:hint="비밀번호를 한번 더 입력해주세요"
        android:inputType="textPassword"
        android:paddingHorizontal="24dp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_text_pwdLengh" />


    <TextView
        android:id="@+id/act_signup_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/black_roundbox_24"
        android:fontFamily="@font/noto_sans_kr_medium"
        android:gravity="center_horizontal"
        android:includeFontPadding="false"
        android:paddingVertical="12dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_signup_edit_pwd2" />
</androidx.constraintlayout.widget.ConstraintLayout>