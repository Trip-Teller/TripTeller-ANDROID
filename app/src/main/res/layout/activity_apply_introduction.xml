<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.ApplyIntroductionActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:paddingVertical="12dp"
        android:fontFamily="@font/notosanskr"
        android:includeFontPadding="false"
        android:text="소개글 작성"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:padding="5dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:text="다음" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        android:paddingBottom="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr"
                android:includeFontPadding="false"
                android:text="여행을 한마디로 소개해주세요"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr"
                android:hint="제목..."
                android:textColorHint="@color/brown_grey"
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/iceblue_roundbox_24"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr"
                android:includeFontPadding="false"
                android:text="자신을 소개해주세요✋🏻"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_title" />

            <EditText
                android:id="@+id/et_introduction"
                android:layout_width="match_parent"
                android:layout_height="347dp"
                android:fontFamily="@font/notosanskr"
                android:hint="본문을 입력해주세요..."
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:textColorHint="@color/brown_grey"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="top"
                android:background="@drawable/iceblue_roundbox_24"
                app:layout_constraintStart_toStartOf="@+id/tv_introduction"
                app:layout_constraintTop_toBottomOf="@+id/tv_introduction" />

            <TextView
                android:id="@+id/tv_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr"
                android:includeFontPadding="false"
                android:text="대표 추천 맛집을 소개해주세요🥘"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_introduction" />

            <EditText
                android:id="@+id/et_restaurant"
                android:layout_width="match_parent"
                android:layout_height="347dp"
                android:fontFamily="@font/notosanskr"
                android:hint="본문을 입력해주세요..."
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:textColorHint="@color/brown_grey"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="top"
                android:background="@drawable/iceblue_roundbox_24"
                app:layout_constraintStart_toStartOf="@+id/tv_restaurant"
                app:layout_constraintTop_toBottomOf="@+id/tv_restaurant" />

            <TextView
                android:id="@+id/tv_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr"
                android:includeFontPadding="false"
                android:text="대표 추천 카페를 소개해주세요☕️"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_restaurant" />

            <EditText
                android:id="@+id/et_cafe"
                android:layout_width="match_parent"
                android:layout_height="347dp"
                android:fontFamily="@font/notosanskr"
                android:hint="본문을 입력해주세요..."
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:textColorHint="@color/brown_grey"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="top"
                android:background="@drawable/iceblue_roundbox_24"
                app:layout_constraintStart_toStartOf="@+id/tv_cafe"
                app:layout_constraintTop_toBottomOf="@+id/tv_cafe" />

            <TextView
                android:id="@+id/tv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr"
                android:includeFontPadding="false"
                android:text="대표 추천 명소를 소개해주세요🏝️"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_cafe" />

            <EditText
                android:id="@+id/et_place"
                android:layout_width="match_parent"
                android:layout_height="347dp"
                android:fontFamily="@font/notosanskr"
                android:hint="본문을 입력해주세요..."
                android:includeFontPadding="false"
                android:textFontWeight="400"
                android:textSize="16dp"
                android:textColorHint="@color/brown_grey"
                android:layout_marginTop="8dp"
                android:padding="16dp"
                android:gravity="top"
                android:background="@drawable/iceblue_roundbox_24"
                app:layout_constraintStart_toStartOf="@+id/tv_place"
                app:layout_constraintTop_toBottomOf="@+id/tv_place" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>